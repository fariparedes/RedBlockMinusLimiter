{
  "manifest_version": 2,
  "name": "Red Block",
  "author": "Gaeulbyul <aeiou256@gmail.com>",
  "version": "0.1.0",
  "homepage_url": "https://github.com/gaeulbyul/RedBlock",
  "description": "트위터 차단 확장기능",
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "https://twitter.com/*",
    "https://api.twitter.com/*",
    "https://mobile.twitter.com/*",
    "storage",
    "notifications",
    "cookies",
    "bookmarks",
    "activeTab"
  ],

  "background": {
    "scripts": [
      "vendor/browser-polyfill.min.js",
      "vendor/lodash.js",
      "scripts/common.js",
      "scripts/background/notify.js",
      "scripts/background/twitter-api.js",
      "scripts/background/chainblock.js",
      "scripts/background/chainblock-session.js",
      "scripts/background/entrypoint.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["*://twitter.com/*", "*://mobile.twitter.com/*"],
      "css": ["styles/style.css"],
      "js": [
        "vendor/browser-polyfill.min.js",
        "vendor/lodash.js",
        "vendor/react.development.js",
        "vendor/react-dom.development.js",
        "scripts/common.js",
        "scripts/content/chainblock-ui.js"
      ]
    }
  ],

  "web_accessible_resources": ["styles/dialog.css"],

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Red Block",
    "default_popup": "popup/popup.html"
  }
}
